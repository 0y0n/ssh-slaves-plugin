<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:c="/lib/credentials">
  <f:entry title="${%Credentials}" field="credentialsId">
      <c:select/>
  </f:entry>

  <j:set var="currentVerifier" value="${it.hostKeyVerifier}"/>
  <f:dropdownList title="${%Host Key Verifier}" name="hostKeyVerifier">
    <j:forEach var="desc" items="${descriptor.hostKeyVerifierExtensionList}" varStatus="loop">
      <j:set var="verifier" value="${desc == currentVerifier.descriptor ? currentVerifier : null}"/>
      <f:dropdownListBlock title="${desc.displayName}" id="${loop.index}" selected="${verifier!=null}" staplerClass="${desc.clazz.name}">
        <st:include page="${desc.configPage}" from="${desc}"/>
      </f:dropdownListBlock>
    </j:forEach>
  </f:dropdownList>

  <f:advanced>
      <f:entry title="${%Port}" field="port">
          <f:textbox default="22" />
      </f:entry>

      <f:entry title="${%JavaPath}" field="javaPath">
          <f:textbox />
      </f:entry>

      <f:entry title="${%JVM Options}" field="jvmOptions">
          <f:textbox />
      </f:entry>

      <f:entry title="${%Prefix Start Slave Command}" field="prefixStartSlaveCmd">
          <f:textbox />
      </f:entry>

      <f:entry title="${%Suffix Start Slave Command}" field="suffixStartSlaveCmd">
          <f:textbox />
      </f:entry>

      <f:entry title="${%Connection Timeout in Seconds}" field="launchTimeoutSeconds">
          <f:textbox name="launchTimeoutSeconds" />
      </f:entry>

      <f:entry title="${%Maximum Number of Retries}" field="maxNumRetries">
          <f:textbox name="maxNumRetries" />
      </f:entry>

      <f:entry title="${%Seconds To Wait Between Retries}" field="retryWaitTime">
          <f:textbox name="retryWaitTime" />
      </f:entry>

  </f:advanced>
</j:jelly>
